class customer(account):
    
    def name(self):
        print("Enter the customer first name")
        self.fname=str(input())
        self.lastname()

    def lastname(self):
        print("Enter the customer last name")
        self.lname=str(input())  
        self.cusaddress()
    def cusaddress(self):
        print("Enter the customer address")
        self.cusaddress=str(input())
        self.cuspincode()

    def cuspincode(self):
        print("Enter the customer pincode")
        self.cuspincode=str(input())
        self.cuscity()

    def cuscity(self):
        print("Enter the customer city")
        self.cuscity=str(input())
        self.cusstate()

    def cusstate(self):
        print("Enter the customer state") 
        self.cusstate=str(input())
        self.cusid()

    def cusid(self):
        print("YOUR CUSTOMER ID IS ")
        
        self.cusid= random.randint(1000000,2000000)
        print(self.cusid)
        self.cuspassword()
    def cuspassword(self):
        print("Enter your Password")
        self.cuspassword=str(input())
        self.cusaccountno()
    def cusaccountno(self):
        print("YOUR account number")
        self.cusaccountno=random.randint(1000000,2000000)
        print(self.cusaccountno)
        cnx = connection.MySQLConnection(user='root', password='Charkris1',
                                 host='localhost',
                                    database='sys')

        cus=cnx.cursor()
        sql="insert into account VALUES ('%s','%s','%s','%s','%s','%s','%s','%s','%s')" % (self.fname,self.lname,self.cusaddress,self.cuspincode,self.cuscity,self.cusstate,self.cusid,self.cuspassword,self.cusaccountno)
        cus.execute(sql)
        cnx.commit()
        cnx.close()
